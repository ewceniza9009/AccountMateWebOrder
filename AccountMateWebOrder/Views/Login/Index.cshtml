@model AccountMateWebOrder.Models.Customer

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Index", "Login", FormMethod.Post))
{
    @Html.ValidationSummary(true, "Login failed. Check your login details.", new { @class = "text-danger"});
    <div>
        <form >
            <div class="form-group">
                @Html.LabelFor(c => c.CustomerCode, new { @class= "control-label"})
                @Html.TextBoxFor(c => c.CustomerCode, new { @class = "form-control", id = "userName", placeholder = "Username" })
                @Html.ValidationMessageFor(c => c.CustomerCode, "", new { @class = "text-danger"})
                <small id="userHelp" class="form-text text-muted">We'll never share your username with anyone else.</small>
            </div>
            <div class="form-group">
                @Html.LabelFor(c => c.Password, new { @class= "control-label"})
                @Html.PasswordFor(c => c.Password, new { @class = "form-control", id = "password", placeholder = "Password" })
                @Html.ValidationMessageFor(c => c.Password, "", new { @class = "text-danger"})
            </div>

            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
}
